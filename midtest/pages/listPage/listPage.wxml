<!--pages/listPage/listPage.wxml-->

<view class="box">

    <text class="title-header">列表</text>

    <view class="list" wx:for="{{list}}" >
        <view class="list-img">
            <image src="{{item.img}}" class="avatar"></image>
        </view>    

        <view class="list-text">
            <view class="list-title">{{index}}-{{item.title}}</view>

            <view class="list-content">{{item.content}}</view>
        </view>
    </view>

</view>
