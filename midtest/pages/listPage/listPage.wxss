/* pages/listPage/listPage.wxss */
.box {
    display: flex;
    flex-direction:column;
}

.title-header {
    font-size: 32rpx;
    font-weight: 600;
    color: #444;
    padding: 20px;
    border-bottom: 2rpx solid #444;
}

.list {
    display: flex;
    flex-direction: row;
    align-content: center;
    border-bottom:1rpx solid #444;
}

.list-img {
    display: flex;
    align-content: center;
    padding: 20rpx 10rpx;
}

.list-img image{
    width: 130rpx;
    height: 130rpx;
    border-radius: 8rpx;
    border: 1px solid #444;
}

.list-text {
    display: flex;
    flex-direction: column;
    align-content: center;
    padding: 30rpx
}

.list-title {
    font-size: 28rpx;
    color: #717171;
    padding-bottom: 30rpx
}

.list-content {
    font-size: 24rpx;
    color: #999;
}

